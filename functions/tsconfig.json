{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "target": "esnext",
    "rootDirs": ["services", "emails", "models"],
  },
  "compileOnSave": true,
  "include": ["index.ts" ,"services/**/*", "models/**/*", "emails/**/*", "test/**/*", "generators/**/*", ".eslintrc.cjs"],
  "exclude": ["node_modules", "**/*.spec.ts", "firebase-export-*"]
}
